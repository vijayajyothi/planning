<div class="index-container">

  <!-- Index form Started -->
  <div class="col-sm-12">
    <div class="form-search col-sm-4">
      <h2>F5 VIP Details</h2></div>
      <div class="form-search col-sm-4" style="margin-top:20px;">
        <div class="input-append">

          <%= form_tag f5_vips_path, :method => :get, :remote=> true do %>
          <%= text_field_tag :search, params[:search],:class=>"span2 search-query" ,:style=>"height:30px;"%>
          <%= submit_tag "Search", :name => nil, :class=>"btn" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class ="container" style="height:662px;overflow:auto;">
      <table class="table table-striped tablesorter">
        <tr>
          <th>Name</th>
          <th>IP</th>
          <th>Port</th>
          <th colspan=2> Actions</th>
        </tr>
        <% @f5_vips.each do |f5_vip| %>
        <% unless f5_vip.ops_status=="Deleted"%>
        
        <tr style="" data-link="<%= f5_vip_path(f5_vip) %>">
          <td><%= f5_vip.name %></td>
          <td><%= f5_vip.ip %></td>
          <td><%= f5_vip.port %></td>
          <td><%= link_to 'Show', f5_vip ,:class => 'btn btn-mini btn-info', :remote=> true%></td>
          <!-- <td><%#= link_to 'Edit', edit_f5_vip_path(f5_vip),:class => 'btn btn-mini btn-warning', :remote=> true %></td> -->
          
        </tr>
        <% else %>
        <tr class="alert alert-error">
          <td colspan=2><%= f5_vip.name %> is deleted</td>
          <td colspan=2><%= link_to 'Destroy', f5_vip, method: :delete, data: { confirm: 'Are you sure?' } ,:class => 'btn btn-mini btn-danger delete-row', :remote=>true%></td>
        </tr>
        <% end %>
        <% end %>
      </table>
    </div>

    <div class="digg_pagination">
      <%= paginate @f5_vips, :container => false, :remote => true %>
    </div>
  </div>

  <script>
  $("tr[data-link]").click(function() {
    link_url = $(this).data("link")
    $.ajax({
      type: "POST",
      url: link_url,
      dataType: "JSON" 
    });
  })
  </script>



