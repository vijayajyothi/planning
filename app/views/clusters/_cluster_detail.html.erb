        <table class="table table-hover">
          <tbody>
            <tr>
              <td><b>Name</b></td>
              <td><%= @cluster.name %></td>
            </tr>
            
            <tr>
              <td><b>VDC</b></td>
              <td><%= my_vdc(@cluster.vdc_id) %></td>
            </tr> 
            <tr>
