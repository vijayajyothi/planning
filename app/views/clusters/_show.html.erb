  <section>
   <div class="container-fluid">
     <div class="col-sm-12">

    <div class="form-search col-sm-4">
      <h4>Cluster Details</h2></div>
        <div class="form-search col-sm-4" style="margin-top:3px;">

          <div class="input-append">

            <%= form_tag clusters_path, :method => :get, :remote=> true do %>
            <%= text_field_tag :search, params[:search],:class=>"span2 search-query" ,:style=>"height:30px;"%>
            <%= submit_tag "Search", :name => nil, :class=>"btn" %>
            <% end %>
          </div>
        </div>
        <div class="form-search col-sm-4" style="margin-top:20px;">

        </div>
      </div>
    <div class="row-fluid">
      <div class="span3">
        <div class="well sidebar-nav" style="margin-right:20px;height:780px; overflow:auto;">
          <ul class="nav nav-list">
            <% @clusters.each do |each_cluster|%>
              <li class=<%=each_cluster.id== params[:id].to_i ? "active" : "none" %>>
              <%= link_to  each_cluster.name, selected_cluster_path(each_cluster), :remote=> true%>
            </li>
            
            <% end %>
          </ul>
        </div><!--/.well -->
      </div><!--/span-->
      <div class="dashboard">
        <%= render :partial=> "cluster_detail" %>
      </div><!--/dashboard-->
    </div><!--/row-->
  </section>
