<div class="right-panel">
  <div class="span9">



   <div class="panel-group" id="accordion">
    <div class="panel panel-default">
      <div class="workflow-heading">
        <a data-toggle="collapse" data-parent="#accordion" href="#basicdata">
          <span>Basic Data</span>
          <p><b> Status : </b><%= @vm.power_state %></p></a>
        </div>

        <div id="basicdata" class="panel-collapse collapse in">
          <div class="panel-body">
            <table class="table table-hover">
              <tbody>
               <tr>
                <td><b>vCenter</b></td>
                <td><%= link_to my_vcenter(@vm.vcenter_id).name, my_vcenter(@vm.vcenter_id), :style=>"color:black;", :remote=> true%></td>

                <td><b>Data Center</b></td>
                <td><%= link_to my_vdc(my_cluster(@vm.cluster_id).vdc_id).name, my_vdc(my_cluster(@vm.cluster_id).vdc_id), :style=>"color:black;", :remote=> true%></td>
              </tr>
              <tr>
                <td><b>Cluster</b></td>
                <td><%= link_to my_cluster(@vm.cluster_id).name, my_cluster(@vm.cluster_id), :style=>"color:black;", :remote=> true%></td>
                <td><b>Host</b></td>
                <td><%= link_to my_host(@vm.vmhost_id).name, my_host(@vm.vmhost_id), :style=>"color:black;", :remote=> true%></td>
              </tr> 
              <tr>
                <td><b>VM Name</b></td>
                <td><%= @vm.name %></td>
                <td><b>VM IP Address</b></td>
                <td><%= @vm.ip %></td>
              </tr> 
              <tr>
                <td><b>Connection Status</b></td>
                <td><%= @vm.connection_state %></td>

                <td><b>Os Type</b></td>
                <td><%= @vm.os %></td>
              </tr>  

              <tr>
                <td><b>Total vCPUs</b></td>
                <td><%= @vm.num_cpus %></td>

                <td><b>Total vNICs</b></td>
                <td><%= @vm.num_vnics %></td>
              </tr>    
              <tr>
                <td><b>Status</b></td>
                <td><%= @vm.status %></td>

                <td><b>Dns Name</b></td>
                <td><%= @vm.vm_hostname %></td>
              </tr>   



            </tbody></table>
          </div>
        </div>
      </div>
      <div class="panel panel-default  span6" style="margin-left:0px;" >
        <%# @clusters = get_cluster(@vcenter) %>
        <div class="workflow-heading">
          <a data-toggle="collapse" data-parent="#accordion" href="#opsdata">
            <span>Vsphere</span>
            <p> <b>HW Version :</b> <%= @vm.version %></p></a>
          </div>

          <div id="opsdata" class="panel-collapse collapse">
            <div class="panel-body" >
              <table class="table table-hover">
               <tbody>
                 <tr>
                  <td><b>Resource Pool</b></td>
                  <td><%= @vm.resource_pool %></td>
                </tr> 
                <tr>
                  <td><b>Tool Status</b></td>
                  <td><%#= vm.tools_status %></td>
                </tr> 
                <tr>
                  <td><b>Tools Version</b></td>
                  <td><%= @vm.tools_version %></td>
                </tr> 
                <tr>
                  <td><b>UUID</b></td>
                  <td><%= @vm.uuid %></td>
                </tr> 
                
                <tr>
                  <td><b>Last Boot</b></td>
                  <td><%= @vm.last_boot %></td>
                </tr>



              </tbody></table>
            </div>
          </div>
        </div>
        <div class="panel panel-default  span6"  style="">
          <% #@esxs = get_esx(@vcenter) %>
          <div class="workflow-heading">
            <a data-toggle="collapse" data-parent="#accordion" href="#status">
              <span>status</span>
              <p> Extra : <%#= @esxs.count %></p></a>
            </div>

            <div id="status" class="panel-collapse collapse">
              <div class="panel-body" style="max-height:533px; overflow:auto;">
                <table class="table table-hover">
                  <tbody>
                    <tr>
                      <td><b>Power State</b></td>
                      <td><%= @vm.power_state %></td>
                    </tr>  
                    <tr>
                      <td><b>Connection State</b></td>
                      <td><%= @vm.connection_state %></td>
                    </tr> 
                    <tr>
                      <td><b>Version</b></td>
                      <td><%= @vm.version %></td>
                    </tr> 
                    <tr>
                      <td><b>Guest State</b></td>
                      <td><%#= @vm.guest_state %></td>
                    </tr> 
                    <tr>
                      <td><b>Memory(MB)</b></td>
                      <td><%#= @vm.memorymb %></td>
                    </tr> 
                    <tr>
                      <td><b>Provisioned Space(GB)</b></td>
                      <td><%#= @vm.provisionedspacegb %></td>
                    </tr> 
                    <tr>
                      <td><b>Used Space(GB)</b></td>
                      <td><%#= @vm.usedspacegb %></td>
                    </tr> 
                    <tr>
                      <td><b>Status</b></td>
                      <td><%#= @vm.gueststate %></td>
                    </tr> 
                  </tbody></table>
                </div>
              </div>
            </div>
          </div>



        </div><!--/span-->
      </div><!--/span-->
