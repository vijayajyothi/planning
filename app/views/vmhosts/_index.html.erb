<div class="index-container">
<div class="col-sm-12">
  <div class="form-search col-sm-4">
    <h2>vmhost Details</h2></div>
    <div class="form-search col-sm-4" style="margin-top:20px;">
      <div class="input-append">

        <%= form_tag vmhosts_path, :method => :get do %>
        <%= text_field_tag :search, params[:search],:class=>"span2 search-query" ,:style=>"height:30px;"%>
        <%= submit_tag "Search", :name => nil, :class=>"btn" %>
        <% end %>
      </div>
    </div>
  </div>

  <table class="table table-striped tablesorter">
    <tr>
      <th>Name</th>
      <th>Cluster</th>
      <th>Connection State</th>
      <th colspan=3> Actions</th>
    </tr>

    <% @vmhosts.each do |vmhost| %>
    <% if vmhost.ops_status=="Deleted"%>
    <tr class="alert alert-error">
      <td colspan=6><%= vmhost.vmhostname %> is deleted</td>
      <td colspan=2><%= link_to 'Delete Permanently', vmhost, method: :delete, data: { confirm: 'Are you sure? will not reverted' } ,:class => 'btn btn-mini btn-danger'%></td>
    </tr>
    <% else %>
    <tr style="cursor:pointer;" id ="complete_tr">
      <td><%= vmhost.name %></td>
      <td><%= vmhost.cluster_id %></td>
      <td><%= vmhost.connection_state %></td>
      <td><%= link_to 'Show', vmhost ,:class => 'btn btn-mini btn-info', :remote=> true%></td>
      <!-- <td><%#= link_to 'Edit', edit_vmhost_path(vmhost),:class => 'btn btn-mini btn-warning' %></td> -->
      <td><%= link_to 'Destroy', vmhost, method: :delete, data: { confirm: 'Are you sure?' } ,:class => 'btn btn-mini btn-danger'%></td>
    </tr>
    <% end %>
    <% end %>
  </table>
  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @posts %>
    </div>
    <%= will_paginate @vmhosts, :container => false %>
  </div>
  <br />
 
</div>
  <%#= link_to 'New vmhost', new_vmhost_path %>

  <script>
  $(function(){
    $('table').tablesorter({
      widgets        : ['zebra', 'columns'],
      usNumberFormat : false,
      sortReset      : true,
      sortRestart    : true
    });
  });

    </script>

