    <div class="span6">
      <div class="workflow-blocks"   style="height:200px;">
        <div class="workflow-heading"><span>Basic Data</span><p>Other :other </p></div>
        <% @vcenter = Vcenter.find_by_id(@vdc.vcenter_id) %>
        <table class="table table-hover">
          <tbody>
            <tr>
              <td><b>Name</b></td>
              <td><%= @vdc.name %></td>
            </tr>
            <tr>
              <td><b>Vcenter</b></td>
              <td><%= link_to @vcenter.name, @vcenter, :style=>"color:black;", :remote=> true%></td>
            </tr>
            <tr>
              <td><b>Location</b></td>
              <td><%#= @vdc.location %></td>
            </tr>  

            <tr>
              <td><b>Description</b></td>
              <td><%= @vdc.description %></td>
            </tr>  
          </tbody>
        </table>

      </div>
    </div>

    <% @clusters = get_cluster(@vcenter) %>
    <div class="span6">
      <div class="workflow-blocks"   style="height:200px;">
        <div class="workflow-heading"><span>Cluster</span><p>Count : <%= @clusters.count%></p></div>
        <table class="table table-hover">

          <tbody>
           <% @clusters.each do |each_cluster|%>
           <tr>

            <td><b><%= each_cluster.name%></b></td>
            <td><%#= @vm.power_state %></td>
          </tr>  
          <% end %>

        </tbody></table>
      </div>
    </div><!--/span-->
      <div class="panel-group" id="accordion">

     <div class="panel panel-default  span6"  style="margin-top:0px;">
            <% @esxs = get_esx(@vcenter) %>
            <div class="workflow-heading">
              <a data-toggle="collapse" data-parent="#accordion" href="#vmhost">
                <span>Vmhost</span>
                <p> Count : <%= @esxs.count %></p></a>
              </div>

            <div id="vmhost" class="panel-collapse collapse">
              <div class="panel-body" style="max-height:533px; overflow:auto;">
                <table class="table table-hover">
                 <tbody>
                   <% @esxs.each do |each_esx|%>
                   <tr>
                    <td><b><%= link_to each_esx.name, each_esx, :style=>"color:black;", :remote=> true%></b></td>

                    <td><%#= @vm.power_state %></td>
                  </tr>  
                  <% end %>
                </tbody></table>
              </div>
            </div>
          </div>
          </div>
