        <table class="table table-hover">
          <tbody>
            <tr>
              <td><b>Name</b></td>
              <td><%= @vcenter.name %></td>
            </tr>
            <tr>
              <td><b>IP Address</b></td>
              <td><%= @vcenter.ip %></td>
            </tr>
            <tr>
              <td><b>Location</b></td>
              <td><%= @vcenter.location %></td>
            </tr>  

            <tr>
              <td><b>Description</b></td>
              <td><%= @vcenter.description %></td>
            </tr>  
            


          </tbody></table>

