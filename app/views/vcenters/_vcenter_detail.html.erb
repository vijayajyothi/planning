        <div class="workflow-blocks"  style="height:200px;">
          <div class="workflow-heading"><span>Vdcs</span><p></p></div>
          <table class="table table-hover">
            <% @vdcs = get_vdc(@vcenter) %>

            <tbody>
              <% @vdcs.each do |each_vdc|%>
              <tr>
                <td><b><%= each_vdc.name%></b></td>
                <td><%#= @vm.createdby %></td>
              </tr> 
              <%end %>
            </tbody></table>
          </div>
        </div>
        <div class="span6" style="margin-left:0px;">
          <div class="workflow-blocks">
            <div class="workflow-heading"><span>Cluster</span><p></p></div>
            <table class="table table-hover">
              <% @clusters = get_cluster(@vcenter) %>

              <tbody>
               <% @clusters.each do |each_cluster|%>
               <tr>

                <td><b><%= each_cluster.name%></b></td>
                <td><%#= @vm.power_state %></td>
              </tr>  
              <% end %>

            </tbody></table>
          </div>
        </div><!--/span-->
        <div class="span6">
          <div class="workflow-blocks">
            <div class="workflow-heading"><span>ESX Hosts</span><p></p></div>
            <table class="table table-hover">
              <% @esxs = get_esx(@vcenter) %>

              <tbody>
               <% @esxs.each do |each_esx|%>

               <tr>
                <td><b><%= each_esx.name%></b></td>
                <td><%#= @vm.cluster %></td>
              </tr> 
              <% end %>  
              

            </tbody></table>
          </div>
        </div><!--/span-->
