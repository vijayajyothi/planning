<!DOCTYPE HTML>
<html>
<head>
  <%= stylesheet_link_tag  "landing",'bootstrap', :media => "all" %>
</head>
<body>


  <div id="wrapper">
    
    <div class="container login">
      <div class="login-pannel">
        <div class="login-header"><img src="/assets/logo.png" width="30%"></div>
        <div class="form">
          <%= form_tag (sessions_path), class: "form" do %>

          <% if flash[:error]%>
          <div class="alert alert-error">
            <p><%= flash[:error] %></p>
          </div>
          <% end %>

          <label>hiiii</label>
          <label>User Name</label>
          <%= text_field_tag :email, params[:email], class: "form-control" , :autofocus=> true%>
          <label>Password</label>
          <%= password_field_tag (:password), nil ,class: "form-control" %>
          <button type="submit" class="btn btn-default">Submit</button>
          <% end %>
        </div>
      </div>
    </div>

  </div>
  <%= render :partial=> "layouts/footer" %>
</body>

<style>
.alert-error {
  color: #b94a48;
  background-color: #f2dede;
  border-color: #eed3d7;
}
</style>


