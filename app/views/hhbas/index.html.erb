<h1>Listing hhbas</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Vmhost</th>
    <th>Status</th>
    <th>Model</th>
    <th>Driver</th>
    <th>Pci</th>
    <th>Wwnn</th>
    <th>Wwpn</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hhbas.each do |hhba| %>
  <tr>
    <td><%= hhba.name %></td>
    <td><%= hhba.vmhost_id %></td>
    <td><%= hhba.status %></td>
    <td><%= hhba.model %></td>
    <td><%= hhba.driver %></td>
    <td><%= hhba.pci %></td>
    <td><%= hhba.wwnn %></td>
    <td><%= hhba.wwpn %></td>
    <td><%= link_to 'Show', hhba %></td>
    <td><%= link_to 'Edit', edit_hhba_path(hhba) %></td>
    <td><%= link_to 'Destroy', hhba, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

